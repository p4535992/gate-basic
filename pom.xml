        <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
        <maven-source-plugin.version>2.3</maven-source-plugin.version>
        <maven-javadoc-plugin.version>2.3</maven-javadoc-plugin.version>
        <maven-exec-plugin.version>1.4.0</maven-exec-plugin.version>
        <maven-dependency-plugin.version>2.10</maven-dependency-plugin.version>
        <tomcat7-maven-plugin.version>2.2</tomcat7-maven-plugin.version>
        <nbm-maven-plugin.version>4.1</nbm-maven-plugin.version>
        <!-- GATE API -->
        <gate.version>8.1</gate.version>
        <!-- Logging -->
        <org.slf4j.version>1.7.13</org.slf4j.version>
        <!-- SPRING FRAMEWORK -->
        <io.spring.platform-version>1.1.2.RELEASE</io.spring.platform-version>
        <org.springframework.version>4.1.6.RELEASE</org.springframework.version>
        <spring-boot-starter-logging.version>1.3.0.RELEASE</spring-boot-starter-logging.version>
